</head>
<body>

    <div class="admin-panel">
        <h2>Admin Panel</h2>
        <div class="section">
            <h3>Train Management</h3>
            <table>
                <thead>
                    <tr>
                        <!-- <th>Train Number</th> -->
                        <th>Train_id</th>
                        <th>tname</th>
                        <th>capacity_id</th>
                        <th>arrival_time</th>
                        <th>departure_time</th>
                        <th>Price</th>
                        <th>Action</th>
                        <th>Action</th>


                    </tr>
                </thead>
                <tbody>
                    <%trains.forEach((train)=>{%>
                        <tr>
                            <form action="/admintrains" method="post">
                                <!-- <td>12345</td> -->
                                <td><%=train.train_id%></td>
                                <td><%=train.tname%></td>
                                <td><%=train.capacity_id%></td>
                                <td><%=train.arrival_time%></td>
                                <td><%=train.departure_time%></td>
                                <td><%=train.price%></td>
                                <td><button>Edit</button></td>
                                
                                <input type="hidden" name="train_id" value="<%=train.train_id%>">
                                <input type="hidden" name="tname" value="<%=train.tname%>">
                                <input type="hidden" name="capacity_id" value="<%=train.capacity_id%>">
                                <input type="hidden" name="arrival_time" value="<%=train.arrival_time%>">
                                <input type="hidden" name="departure_time" value="<%=train.departure_time%>">
                                <input type="hidden" name="price" value="<%=train.price%>">
                                
                            </form>
                            <form action="/admintrains" method="delete">
                                <td><button class="red">delete</button></td>
                            </form>
                        </tr>
                    <%});%>
                </tbody>
            </table>
        </div>
