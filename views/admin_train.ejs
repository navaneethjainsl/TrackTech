<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="css/admin_train.css">
</head>
<body>

    <div class="admin-panel">
        <h2>Admin Panel</h2>
        <div class="section">
            <h3>Train Management</h3>
            <table>
                <thead>
                    <tr>
                        <!-- <th>Train Number</th> -->
                        <th>Train_id</th>
                        <th>tname</th>
                        <th>capacity_id</th>
                        <th>arrival_time</th>
                        <th>departure_time</th>
                        <th>Price</th>
                        <th>Action</th>
                        <th>Action</th>


                    </tr>
                </thead>
                <tbody>
                    <%trains.forEach((train)=>{%>
                        <tr>
                            <form action="/admintrains" method="post">
                                <!-- <td>12345</td> -->
                                <td><%=train.train_id%></td>
                                <td><%=train.tname%></td>
                                <td><%=train.capacity_id%></td>
                                <td><%=train.arrival_time%></td>
                                <td><%=train.departure_time%></td>
                                <td><%=train.price%></td>

                                <input type="hidden" name="train_id" value="<%=train.train_id%>">
                                <input type="hidden" name="tname" value="<%=train.tname%>">
                                <input type="hidden" name="capacity_id" value="<%=train.capacity_id%>">
                                <input type="hidden" name="arrival_time" value="<%=train.arrival_time%>">
                                <input type="hidden" name="departure_time" value="<%=train.departure_time%>">
                                <input type="hidden" name="price" value="<%=train.price%>">
                                
                                <td><button>Edit</button></td>
                                
                            </form>
                            <form id="<%=`deleteform${train.train_id}`%>" action="/deletetrains" method="post" >
                                <input type="hidden" name="train_id" value="<%=train.train_id%>">
                            </form>
                            <td><button class="red" onclick=<%=`deleteEntry(${train.train_id})`%>>delete</button></td>
                        </tr>
                    <%});%>
                </tbody>
            </table>
            <form action="/addtrain" method="get">
                <button id="addtrain">Add Trains</button>
            </form>
        </div>

        <script src="js/admin.js"></script>

</body>
</html>
